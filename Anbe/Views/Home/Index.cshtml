@model IEnumerable<Anbe.Models.ViewModels.ProductViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="col-lg-9 col-md-9 col-xs-12 pl">
    <div class="shop-archive-content mt-3 d-block">
        <div class="archive-header">
            <h2 class="archive-header-title">آرشیو محصولات</h2>
            <div class="sort-tabs mt-0 d-inline-block pr">
                <h4>مرتب‌سازی بر اساس :</h4>
            </div>
            
            <div class="nav-sort-tabs-res">
                <ul class="nav sort-tabs-options" id="myTab" role="tablist">


                    <li class="nav-item">
                        <a class="nav-link"  asp-action="index" asp-route-sort = "1" asp-route-min = "@Context.Request.Query["min"].ToString()"
                        asp-route-cat = "@Context.Request.Query["cat"].ToString()"
                           >جدیدترین</a>
                    </li>
                    <li class="nav-item">
                         <a class="nav-link"  asp-action="index" asp-route-sort = "2">ارزان‌ترین</a>
                    </li>
                    <li class="nav-item">
                         <a class="nav-link"  asp-action="index" asp-route-sort = "3">گران‌ترین</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="product-items">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="Most-visited" role="tabpanel"
                     aria-labelledby="newest-tab">
                    <div class="row">
                        @foreach (var item in @Model)
                        {
                            <div class="col-lg-4 col-md-4 col-xs-12 order-1 d-block mb-3">
                                <section class="product-box product product-type-simple">
                                    <div class="thumb">
                                        <a href="#" class="d-block">
                                            <div class="promotion-badge">@item.NameMaqaze</div>
                                           @* <div class="product-rate">
                                                <i class="fa fa-star active"></i>
                                                <i class="fa fa-star active"></i>
                                                <i class="fa fa-star active"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>*@
                                            <div hidden class="discount-d">
                                                <span>10%</span>
                                            </div>
                                            <img src="~/GalleryFiles/@item.Image">
                                        </a>
                                    </div>
                                    <div class="title">
                                        <a href="#">
                                            @item.ProductName
                                        </a>
                                    </div>
                                    <div class="price">
                                        <span class="amount">
                                            <span>قیمت فروشگاهی  : </span>
                                            @item.Price.ToString("#,0")
                                            <span>تومان</span>
                                        </span>
                                    </div>
                                    @if (item.PricetoziKonande != 0)
                                    {
                                    <div class="price">
                                        <span class="amount text-primary" >
                                            <span>قیمت بنکدار  : </span>
                                            @item.PricetoziKonande.ToString("#,0")
                                            <span>تومان</span>
                                        </span>
                                    </div>    
                                    }
                                    <div style=" white-space: nowrap;   width: 90%; overflow: hidden;  text-overflow: ellipsis;  font-size:13px; ">
                                        @item.ProductDescription
                                    
                                    </div>
                                </section>
                            </div>
                        }
                        

                    </div>
                </div>


            </div>
        </div>
        <div class="pagination-product">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link active" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
  
 <div class="card" id="ChatBox">
    <div class="card-header">
        <b>پشتیبانی آنلاین</b>
    </div>
    <div id="MessagePanel">
        <ul id="Messages">

        </ul>


        <div id="SendNewMessage">
            <form id="NewMessageForm" class="row">
                <input id="MessageInput" 
                       class="form-control col-md-8 col-sm-8"
                       placeholder="پیام خود را وارد کنید..." />
                <button class="btn btn-success col-md-4 col-md-4">
                    ارسال
                </button>

            </form>
        </div>
    </div>
</div>
</div>
