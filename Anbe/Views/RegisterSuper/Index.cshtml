@model Anbe.Models.ViewModel.RegiseterViewmodelss
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.rtl.min.css">

    <style>
        html,
        body {

            width: 100%;
            font-family: vazire;
            height: 100vh;
        }
        @@font-face {
            font-family: "mistral";
            src: url(/MISTRAL.TTF);
            font-family: "vazire";
            src: url(Vazir.ttf);
        }
    </style>
</head>

<body>
    <div class="container-fluid  h-100 d-flex flex-column justify-content-center align-items-center">

        <div class="border  border-1 " style="border-radius: 10px; border-color: blanchedalmond; width: 35%; padding-bottom: 20px !important; padding-left: 30px !important; padding-right: 30px !important;  display: flex;  padding: 10px; flex-direction: column;">
            <form method="post" asp-action="Index" enctype="multipart/form-data" >
                <h1 style="text-align: center; font-family: mistral; font-size: 4rem; color: #ccad18;">anbe</h1>
                <h5> ورود | ثبت نام</h5>




                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">نام و نام خانوادگی</label>
                    <input type="text"   class="form-control" asp-for="FirstName">
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">شماره تلفن</label>
                    <input type="tel" class="form-control" asp-for="Telephone">


                </div>


                <div class="mb-3">
                    <label for="formFile" class="form-label">جواز کسب یا قولنامه</label>
                 <input name="files" type="file"  class="form-control"/>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">نام مغازه</label>
                    <input type="text" class="form-control" asp-for="NameMaqaze">


                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">آدرس</label>
                    <input type="text" class="form-control" asp-for="Address">


                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">رمز عبور</label>
                    <input type="password" class="form-control" asp-for="Pass">


                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" checked name="ToziKonande" type="radio"  value = "true">
                    <label class="form-check-label" for="inlineRadio1">توزیع کننده</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" name="ToziKonande" type="radio"  value ="false">
                    <label class="form-check-label" for="inlineRadio2">فروشگاهی</label>
                </div>
             
                <button type="submit" class="btn btn-warning w-100 mt-3" style="color: aliceblue;">ورود</button>

            </form>
        </div>

    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
       <script>
        const lent= -1 * window.history.length * 100 ;
        window.history.go(lent);

        </script>
</body>

</html>