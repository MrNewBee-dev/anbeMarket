
@model IEnumerable<Anbe.Areas.AnbeAdmin.Models.Color>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MymasterLayout.cshtml";
    System.Globalization.PersianCalendar persian = new System.Globalization.PersianCalendar();
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                لیست محصولات
            </div>
            <div class="card-body">
                <div class="col-md-4 mb-3 padding-0px">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-primary"><i class="fa fa-search"></i> جستجو</button>
                        </span>
                        <input id="input-group-1" name="input1-group2" class="form-control" placeholder="عنوان محصول را وارد کنید" type="text">
                    </div>
                    <div class="input-group my-1">

                        <form asp-action="End">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-search"></i> فروش بسته شد</button>
                        </form>


                    </div>
                </div>
                <p>
                    <a class="btn btn-primary btn-block" href="/anbeadmin/Products/create" role="button">
                        ایجاد محصول جدید
                    </a>
                </p>
           
                <div class="table-responsive">
                    @if (ViewBag.Msg != null)
                    {
                        <div class="alert alert-danger alert-dismissable">
                            @ViewBag.Msg
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>رنگ</th>
                                <th>کدهگز</th>
                       
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Select((value, i) => (value, i)))
                            {
                            <tr>
                                <td class="text-center">@item.i</td>
                                <td class="text-nowrap">@item.value.EsmeRang</td>
                                <td class="text-nowrap">@item.value.HexRag</td>
                              

                                }

                            </tr>
                            }
                        </tbody>
                    </table>

                  


                </div>
            </div>
        </div>
    </div>
</div>

