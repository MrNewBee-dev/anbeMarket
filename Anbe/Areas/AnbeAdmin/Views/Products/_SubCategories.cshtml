
@model Anbe.Models.ViewModels.BooksSubCategoriesViewModel

<ul>
    @foreach (var item in Model.Categories)
    {
        <li>

            @if (Model.CategoryID !=null)
           {
               @if (Model.CategoryID.Contains(item.CategoryID)){
                <input type="radio" name="CategoryID" value="@item.CategoryID" checked/> @item.CategoryName}
                else{             
                
                    <input type="radio" name="CategoryID" value="@item.CategoryID" /> @item.CategoryName
                        }
            }    
           

                            
           else{
                        <input type="radio" name="CategoryID" value="@item.CategoryID" /> @item.CategoryName
                }
           

            
            @{Model.Categories = item.SubCategories;}
                                            @await Html.PartialAsync("_SubCategories",Model )
        </li>
    }

</ul>